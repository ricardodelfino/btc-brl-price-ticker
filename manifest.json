{
  "manifest_version": 3,
  "name": "BTC BRL Price Ticker",
  "version": "1.0.0",
  "description": "Displays the current Bitcoin (BTC) price in Brazilian Real (BRL) on the browser icon.",
  "permissions": [
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://api.binance.com/",
    "https://api.coingecko.com/"
  ],
  "action": {
    "default_icon": {
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "BTC BRL Price Ticker"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}